<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Conrad的博客</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/css/reset.css" />
  <link rel="stylesheet" type="text/css" href="/css/common.css" />
  <link rel="stylesheet" type="text/css" href="/css/iconfont.css" />
  <link rel="stylesheet" type="text/css" href="/css/login.css" />
</head>

<body>
  <!-- 头部 -->
  <header>
    <div class="header-wrap">
      <div class="header-top">
        <div class="header-log" onclick="window.location.href='';return false">Conrad</div>
        <div class="header-nav">
          <ul>
            <li><a href="">首页</a></li>
            <li><a href="blog.html">博客</a></li>
            <li><a href="">项目</a></li>
            <li><a href="">关于</a></li>
          </ul>
        </div>
        <div class="header-user">
          <form>
            <input type="text" placeholder="搜索"></input>
          </form>
          <a href="login.html">登录</a>
          <a href="register.html">注册</a>
        </div>
      </div>
      <div class="header-motto">
        <h1>just going go</h1>
      </div>
    </div>
  </header>
  <!-- 登录页面 -->
  <main class=card-wrapper>
    <section class="content-wrap">
      <div class="login-and-register">
        <div class="card-header">登录</div>
        <div class="card-body">
          <form class="card-form" action="" method="">
            <div class="form-group">
              <label class="control-label" for="username">用户名</label>
              <input class="control-input" type="username" id="username" name="username">
            </div>
            <div class="form-group">
              <label class="control-label" for="password">密码</label>
              <input class="control-input" type="password" id="password" name="password">
            </div>
            <div class="form-check">
              <label class="control-label-check" for="keeppwd">
                <input class="control-input-check" type="checkbox" id="keeppwd">记住密码
              </label>
            </div>
            <button type="button" class="form-btn" id="btn-login">登录</button>
            <a class="form-forget" href="">忘记密码?</a>
          </form>
          <a class="pull-right" href="">使用&nbsp;<i class="icon iconfont icon-github"></i>&nbsp;登录</a>
        </div>
      </div>
    </section>
  </main>
  <!-- 底部 -->
  <script src="http://libs.baidu.com/jquery/1.11.1/jquery.min.js"></script>
  <script src="/js/login.js"></script>
</body>

</html>