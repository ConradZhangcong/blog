<!-- 博客主体部分 -->
<section class="article-list-container">
  <% for(var i = 0; i < articleList.length; i++) { %>
  <article class="article-container shadow-box">
    <div class="article-header">
      <a title="<%=articleList[i].title%>" href="/article?id=<%=articleList[i]._id%>" class="article-title ellipsis">
        <%=articleList[i].title%></a>
      <ul class="article-meta clearfix">
        <li>
          <i class="iconfont">&#xe7eb;</i>
          <span><%=articleList[i].createTime.split(' ')[0]%></span>
        </li>
        <li class="article-category"> 
          <i class="iconfont">&#xe654;</i>
          <a href="javascript:;"><%=articleList[i].classify%></a>
        </li>
        <li>
          <i class="iconfont" title="评论">&#xe7f5;</i>
          <span><%=articleList[i].comments%></span>
        </li>
        <li>
          <i class="iconfont" title="阅读量">&#xe62a;</i>
          <span><%=articleList[i].reading%></span>
        </li>
        <li>
          <i class="iconfont" title="收藏">&#xe702;</i>
          <span><%=articleList[i].favourite%></span>
        </li>
      </ul>
    </div>
    <div class="article-description">
      <p class="ellipsis-mutiple" title="<%=articleList[i].describe%>"><%=articleList[i].describe%></p>
    </div>
    <div class="article-footer">
      <i class="iconfont" style="margin-right: 6px;">&#xe610;</i>
      <% for(var j = 0; j < articleList[i].tags.length; j++) { %>
      <a class="article-tag" href="javascript:;"><%=articleList[i].tags[j]%></a>
      <% } %>
    </div>
  </article>
  <% } %>
  <!-- 分页 -->
  <div class="article-paginate">
    <ul class="clearfix">
      <a href="javascript:;">&lt;</a>
      <a href="javascript:;">1</a>
      <a href="javascript:;">2</a>
      <a href="javascript:;">3</a>
      <a href="javascript:;">4</a>
      <a href="javascript:;">5</a>
      <a href="javascript:;">&gt;</a>
    </ul>
  </div>
</section>
